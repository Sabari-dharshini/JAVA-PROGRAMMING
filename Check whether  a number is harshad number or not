import java.util.Scanner;
class Main{
    public static void main(String[]args){
       
       
            int num=500;
            int sum=0;
            int temp=num;
            while(num>0){
                int digit=num%10;
                sum+=digit;
                num/=10;
                
                
            }
            if(temp%sum==0){
                System.out.println("It is a Harshad number");
            }else{
                System.out.println("It is not a Harshad number");
            }
        }
    
}
